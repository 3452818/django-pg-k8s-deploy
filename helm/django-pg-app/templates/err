# helm/django-pg-app/templates/pvc.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: postgres-pvc
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ .Values.postgres.persistence.size }}
  storageClassName: {{ .Values.postgres.persistence.storageClass | default "" }}

# helm/django-pg-app/templates/deployment-app.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: django-pg-app
  labels:
    app: django-pg-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: django-pg-app
  template:
    metadata:
      labels:
        app: django-pg-app
    spec:
      containers:
      - name: django-app
        image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
        ports:
        - containerPort: {{ .Values.app.port }}
        env:
        - name: DB_HOST
          value: "{{ .Values.app.env.DB_HOST }}"
        - name: DB_NAME
          value: "{{ .Values.app.env.DB_NAME }}"
        - name: DB_USER
          value: "{{ .Values.app.env.DB_USER }}"
        - name: DB_PASS
          value: "{{ .Values.app.env.DB_PASS }}"
        securityContext:
          runAsUser: 1000
          runAsGroup: 1000
        resources:
          requests:
            memory: "256Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"

# helm/django-pg-app/templates/deployment-postgresql.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: django-pg-app-postgresql
  labels:
    app: django-pg-app-postgresql
spec:
  replicas: 1
  selector:
    matchLabels:
      app: django-pg-app-postgresql
  template:
    metadata:
      labels:
        app: django-pg-app-postgresql
    spec:
      containers:
      - name: postgres
        image: "{{ .Values.postgres.image.repository }}:{{ .Values.postgres.image.tag }}"
        ports:
        - containerPort: 5432
        env:
        - name: POSTGRES_DB
          value: "{{ .Values.postgres.env.POSTGRES_DB }}"
        - name: POSTGRES_USER
          value: "{{ .Values.postgres.env.POSTGRES_USER }}"
        - name: POSTGRES_PASSWORD
          value: "{{ .Values.postgres.env.POSTGRES_PASSWORD }}"
        volumeMounts:
        - name: postgres-storage
          mountPath: /var/lib/postgresql/data
        resources:
          requests:
            memory: "512Mi"
            cpu: "250m"
          limits:
            memory: "1Gi"
            cpu: "500m"
      volumes:
      - name: postgres-storage
        persistentVolumeClaim:
          claimName: postgres-pvc

# helm/django-pg-app/templates/service-app.yaml
apiVersion: v1
kind: Service
metadata:
  name: django-pg-app
  labels:
    app: django-pg-app
spec:
  type: NodePort
  ports:
  - port: {{ .Values.app.port }}
    targetPort: {{ .Values.app.port }}
    nodePort: 30030
  selector:
    app: django-pg-app
# helm/django-pg-app/templates/service-postgresql.yaml
apiVersion: v1
kind: Service
metadata:
  name: django-pg-app-postgresql
  labels:
    app: django-pg-app-postgresql
spec:
  type: ClusterIP
  ports:
  - port: 5432
    targetPort: 5432
  selector:
    app: django-pg-app-postgresql


